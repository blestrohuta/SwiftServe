<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        h1 {
            margin-top: 70px;
            margin-bottom: 20px;
        }

        .container,
        h1 {
            text-align: center
        }
    </style>
    <title>Order Details</title>
</head>

<body>
    <%- include('_navbar') %>
        <h1>Order Details</h1>
        <div class="container">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>No</th>
                        <th>Item Name</th>
                        <th>Start Date</th>
                        <th>Duration</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <%= 1 %>
                        </td>
                        <td>
                            <%= order.Item?.name %>
                        </td>
                        <td>
                            <%= order.startDate %>
                        </td>
                        <td>
                            <%= order.duration %>
                        </td>
                        <td>
                            <%= formatNumber(order.price) %>
                        </td>
                        <td>
                            <a href="/order/delete/<%= order.UserId %>/<%= order.id %>"
                                class="btn btn-danger">Delete</a>
                            <a href="/order/update/<%= order.UserId %>/<%= order.id %>" class="btn btn-success">Add
                                More</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>